<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%style{%d{ISO8601}}{black} %highlight{%-5level }[%style{%t}{bright,red}] %style{%C{1.}}{bright,red}: %msg%n%throwable"/>
        </Console>
        <RollingFile name="RollingFile"
                     fileName="logs/log4j2-simplewebapp.log"
                     filePattern="logs/log4j2-simplewebapp-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy
                        size="10 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>

        <Logger name="com.godel.simplewebapp" level="trace"/>

    </Loggers>

</Configuration>